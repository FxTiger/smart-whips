<div class="container w-50">
  <%= simple_form_for [@car, @booking] do |f| %>
        <%= f.input :details, label: :Requests, placeholder: 'Let the prestigious owner know of your material desires' %>
        <%= f.input :rental_start, as: :date, html5: true %>
        <%= f.input :rental_end, as: :date, html5: true %>
        <%= f.submit 'Book', class: "btn-primary btn btn-flat" %>
      <% end %>
</div>
<div class="container w-50">
<p></p>
  <%= link_to 'Go Back', cars_path, class: "btn btn-flat btn-warning text-decoration-none" %>
</div>
