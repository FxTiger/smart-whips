<div class="container">
  <h1>Your bookings</h1>

  <div class="cards-booking">
    <% @bookings.each do |booking| %>
      <div class="card-booking">
        <%= cl_image_tag booking.car.photo.key %>
        <div class="card-booking-infos">
          <h2><%= link_to booking.car.model, user_booking_path(current_user, booking.car) %></h2>
          <p>
            <%= booking.details %>
            <%=booking.rental_start.to_formatted_s(:long) %>
            to <%= booking.rental_end.to_formatted_s(:long) %>
            (<%= booking.number_of_days %> days)
          </p>
          <p>Price paid: Â£<%= booking.total_price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
