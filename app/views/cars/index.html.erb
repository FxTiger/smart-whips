<h3 style="display: flex; justify-content: center;"><em>Our Fine Selection of Motor Vehicles</em></h3>
  <div class="heading">
    <div class="search-filters-background" >
          <div>
        <%= form_with url: cars_path, method: :get, class: "d-flex form-inline" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a car in a city near you!"
        %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
      <input type="date" id="start" name="trip-start"
                value="2023-02-28"
                min="2023-01-01" max="2023-12-31" class="search-filter">
      <select class="search-filter">
          <option value="" disabled selected>Car Type</option>
          <option>4x4</option>
          <option>Sedan</option>
          <option>MiniVan</option>
          <option>Sports Car</option>
      </select>
    </div>
  </div>
 <%# <this is the new search bar> %>

<% end %>

<div class="cards-container m-4">

  <div class="cards">
    <% (@cars+@cars).each do |car| %>
      <div class="card-c">
        <%= cl_image_tag car.photo.key %>
        <div class="card-c-info">
          <p>⭐⭐⭐⭐⭐</p>
          <p><strong><%= link_to car.model, car_path(car) %></strong></p>
          <span><strong>£<%= car.price%>/day</strong></span>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Change the token below (https://www.mapbox.com/account/access-tokens/) -->
 <div id="map" data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
</div>


<%= link_to "Add new car", new_car_path %>
