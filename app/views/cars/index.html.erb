<%# <h3 style="display: flex; justify-content: center;"><em>Search Results</em></h3> %>
  <div class="heading">
    <div class="search-filters-background" >
      <select class="search-filter">
          <option value="" disabled selected>City</option>
          <option>London</option>
          <option>San Francisco</option>
      </select>
      <input type="date" id="start" name="trip-start"
                value="2023-02-28"
                min="2023-01-01" max="2023-12-31" class="search-filter">
      <select class="search-filter">
          <option value="" disabled selected>Car Type</option>
          <option>4x4</option>
          <option>Sedan</option>
          <option>MiniVan</option>
          <option>Sports Car</option>
      </select>
      <a href="/cars">
            <button type="submit" class="search-filter"> Search </button>
      </a>
    </div>
  </div>

<div class="cards-container m-4">

  <div class="cards">
    <% (@cars+@cars).each do |car| %>
      <div class="row">

        <div class="card-c" style="background-image: url(<%= cloudinary_url(car.photo.key) %>); background-blend-mode: lighten;">
        </div>

        <div class="card-c">
          <p>⭐⭐⭐⭐⭐</p><p><strong><%= link_to car.model, car_path(car) %></strong></p>
          <p><small><%= car.description[0.10] %></small></p>
          <span><strong>£<%= car.price%>/day</strong></span>
        </div>

      </div>
    <% end %>
  </div>

  <!-- Change the token below (https://www.mapbox.com/account/access-tokens/) -->
  <img id="map" src='https://traista.com/wp-content/uploads/2018/03/London-Google-map.png'/>
</div>





<%= link_to "Add new car", new_car_path %>
